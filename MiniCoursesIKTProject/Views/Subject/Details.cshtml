@model MiniCoursesDomain.Entities.Subject

@{
    ViewData["Title"] = "Subject Details";
}

@if (User.IsInRole("Admin") || User.IsInRole("Editor"))
{
    <h1 class="text-center mb-4">Subject Details</h1>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="form-group">
                    <label class="control-label">@Html.DisplayNameFor(model => model.Code)</label>
                    <p class="form-control-plaintext">@Html.DisplayFor(model => model.Code)</p>
                </div>

                <div class="form-group">
                    <label class="control-label">@Html.DisplayNameFor(model => model.Name)</label>
                    <p class="form-control-plaintext">@Html.DisplayFor(model => model.Name)</p>
                </div>

                <div class="form-group">
                    <label class="control-label">@Html.DisplayNameFor(model => model.Professor)</label>
                    <p class="form-control-plaintext">@Html.DisplayFor(model => model.Professor.Name)</p>
                </div>

                <div class="form-group">
                    <label class="control-label">@Html.DisplayNameFor(model => model.Semester)</label>
                    <p class="form-control-plaintext">@Html.DisplayFor(model => model.Semester)</p>
                </div>

                <div class="form-group">
                    <label class="control-label">@Html.DisplayNameFor(model => model.SemesterType)</label>
                    <p class="form-control-plaintext">@Html.DisplayFor(model => model.SemesterType)</p>
                </div>

                <div class="form-group">
                    <label class="control-label">@Html.DisplayNameFor(model => model.Year)</label>
                    <p class="form-control-plaintext">@Html.DisplayFor(model => model.Year)</p>
                </div>

                <div class="form-group text-center mt-4">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <h3 class="text-center text-danger">You do not have permission to access this page.</h3>
}