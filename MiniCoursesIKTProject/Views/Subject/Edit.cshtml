@model MiniCoursesDomain.Entities.Subject

@{
    ViewData["Title"] = "Edit Subject";
}
@if (User.IsInRole("Admin") || User.IsInRole("Editor"))
{

    <h1 class="text-center mb-4">Edit Subject</h1>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="form-group">
                        <label asp-for="Code" class="control-label"></label>
                        <input asp-for="Code" class="form-control" placeholder="Enter course code" />
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" placeholder="Enter subject name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ProfessorId" class="control-label">Professor</label>
                        <select asp-for="ProfessorId" class="form-control" asp-items="ViewBag.ProfessorId">
                            <option value="">Select Professor</option>
                        </select>
                        <span asp-validation-for="ProfessorId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Semester" class="control-label">Semester</label>
                        <select asp-for="Semester" class="form-control" asp-items="ViewBag.Semester">
                            <option value="">Select Semester</option>
                        </select>
                        <span asp-validation-for="Semester" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="SemesterType" class="control-label">Semester Type</label>
                        <select asp-for="SemesterType" class="form-control" asp-items="ViewBag.SemesterType">
                            <option value="">Select Semester Type</option>
                        </select>
                        <span asp-validation-for="SemesterType" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Year" class="control-label">Year</label>
                        <input asp-for="Year" class="form-control" placeholder="Enter academic year" />
                        <span asp-validation-for="Year" class="text-danger"></span>
                    </div>

                    <div class="form-group text-center mt-4">
                        <button type="submit" class="btn btn-primary btn-lg">Save</button>
                        <a asp-action="Index" class="btn btn-secondary btn-lg ml-3">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
}
else
{
    <h3 class="text-center text-danger">You do not have permission to access this page.</h3>
}