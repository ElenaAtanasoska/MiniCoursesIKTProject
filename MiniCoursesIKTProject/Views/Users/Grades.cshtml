@{
    ViewData["Title"] = "Grades for Student";
}

<h2>Grades for Student</h2>

<div class="container mt-4">

    <a asp-action="Index">Back to users</a>
    <div class="card p-4 shadow-sm rounded-4 bg-light">
        <h5 class="mb-3">Subjects & Grades</h5>
        <div style="max-height: 250px; overflow-y: auto;">
            <table class="table table-borderless">
                <thead class="fw-bold">
                    <tr>
                        <th>Subject name</th>
                        <th style="width: 100px;">Grade</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < 4; i++)
                    {
                        <tr>
                            <td>Subject name</td>
                            <td>
                                <div class="bg-white text-center rounded-3 shadow-sm" style="width: 60px;">
                                    10
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
