@model MiniCoursesDomain.Identity.User
@{
    ViewData["Title"] = "Grades for Student";
}

<h2>Grades for Student @Model.Name @Model.LastName</h2>

<div class="container mt-4">

    <a asp-action="Index">Back to users</a>
    <div class="card p-4 shadow-sm rounded-4 bg-light mt-4">
        <div style="max-height: 250px; overflow-y: auto;">
            <table class="table table-borderless">
                <thead class="fw-bold">
                    <tr>
                        <th>Subject name</th>
                        <th>Year</th>
                        <th style="width: 100px;">Grade</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var sg in Model.SubjectsGrades)
                    {
                        if (sg.Grade.HasValue)
                        {
                            <tr>
                                <td>@sg.Subject.Name</td>
                                <td>@sg.Subject.Year</td>
                                <td>
                                    <div class="bg-white text-center rounded-3 shadow-sm" style="width: 60px;">
                                        @sg.Grade
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
